<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.azuka.jakartaweatherprediction.screen.MainViewModel"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".screen.MainActivity">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/city"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/temperature"/>
        <TextView
                android:text="@{viewModel.cityInfo.city.name}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/city"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                tools:text="Jakarta" android:textSize="24sp"
                android:textColor="@android:color/black" android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="@{viewModel.cityInfo.list[0].dateText}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                app:layout_constraintTop_toBottomOf="@+id/city" app:layout_constraintStart_toStartOf="@+id/city"
                android:layout_marginTop="16dp" tools:text="18 Aug 2019" android:textColor="@android:color/black"
                android:textSize="18sp"/>
        <TextView
                android:text="@{Double.toString(viewModel.cityInfo.list[0].main.temperature)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temperature" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/date" app:layout_constraintStart_toStartOf="@+id/date"
                tools:text="40" android:textColor="@android:color/black" android:textSize="36sp"
                android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:clipToPadding="false"
                tools:itemCount="9"
                tools:listitem="@layout/item_hourly_weather_list"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/temperature"
                android:id="@+id/hourly"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>