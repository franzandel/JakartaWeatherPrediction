<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="infoWeather" type="com.azuka.jakartaweatherprediction.entities.Info"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <TextView
                app:temperatureFormat="@{infoWeather}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/temperature"
                app:layout_constraintTop_toBottomOf="@+id/icon"
                app:layout_constraintStart_toStartOf="@+id/wind_speed" tools:text="35"
                android:textAlignment="center" android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="@+id/wind_speed"/>
        <ImageView
                app:weatherIcon="@{infoWeather.weather[0].icon}"
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/icon"
                app:layout_constraintStart_toStartOf="@+id/wind_speed"
                app:layout_constraintEnd_toEndOf="@+id/wind_speed" app:layout_constraintTop_toBottomOf="@+id/time"
        />
        <TextView
                app:timeFormat="@{infoWeather}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/time" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/wind_speed"
                android:textAlignment="center" tools:text="09.00"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="@+id/wind_speed"/>
        <TextView
                app:windSpeedFormat="@{infoWeather}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wind_speed" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/temperature" tools:text="9.75 m/s"
                android:textColor="@android:color/black" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>